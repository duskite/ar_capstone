<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#1A2933"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="neAR"
            android:textColor="@color/white"
            android:textSize="50dp" />


        <!--        주최자 참가자 체크 부분-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="사용자 유형을 선택해주세요." />

            <RadioGroup
                android:id="@+id/userType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <RadioButton
                    android:id="@+id/host"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="30dp"
                    android:text="주최자"
                    android:textColor="@drawable/selector_radio_text" />

                <RadioButton
                    android:id="@+id/participant"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="30dp"
                    android:text="참가자"
                    android:textColor="@drawable/selector_radio_text" />
            </RadioGroup>
        </LinearLayout>


        <TextView
            android:id="@+id/userId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="참가자ID 발급 실패" />

        <CheckBox
            android:id="@+id/check_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="채널 생성을 원하시면 체크해주세요."
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtChannelName"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:gravity="center"
            android:hint="채널명을 입력해주세요." />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공개된 채널 불러오기" />

            <Button
                android:id="@+id/btnSpinnerLoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOAD" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinner_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />


        <LinearLayout
            android:id="@+id/layout_channel_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="채널 공개 여부를 선택해주세요" />

            <RadioGroup
                android:id="@+id/channelType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <RadioButton
                    android:id="@+id/channelPublic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:checked="true"
                    android:padding="1dp"
                    android:text="공개" />

                <RadioButton
                    android:id="@+id/channelSecret"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:padding="1dp"
                    android:text="비공개" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/btnInven"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_shape"
            android:enabled="false"
            android:text="입장하기" />

    </LinearLayout>

</LinearLayout>

